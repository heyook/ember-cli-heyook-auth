<div class='form-group'>
  {{input value=model.identification
    class='form-control'
    placeholder="Email Address"
    id='email'}}
</div>
<div class='form-group'>
  {{input value=model.password
    class='form-control'
    type='password'
    placeholder="Password"
    id='password'}}
</div>
<p class="error">
  {{error}}
</p>
<div class="form-actions">
  {{#if onRemember}}
    <input id="remember-me" type="checkbox" name="remember_me" value=rememberMe checked>
    <span>Remember me</span>
  {{/if}}
  <input {{action 'submit'}} disabled={{model.isntValid}} type="submit" class="btn btn-primary" value="Login">
</div>
